{
  "name": "lims-monorepo",
  "private": true,
  "version": "1.0.0",
  "description": "Root wrapper for LIMS frontend and backend",
  "scripts": {
    "install:all": "npm install --prefix project && npm install --prefix project/backend",
    "frontend:dev": "npm run dev --prefix project",
    "frontend:build": "npm run build --prefix project",
    "frontend:preview": "npm run preview --prefix project",
    "backend:dev": "npm run dev --prefix project/backend",
    "backend:start": "npm run start --prefix project/backend",
    "dev": "concurrently -n backend,frontend -c blue,green \"npm:backend:dev\" \"npm:frontend:dev\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
